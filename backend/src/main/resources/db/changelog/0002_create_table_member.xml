<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.2.xsd">

    <changeSet id="0002" author="lukas">
        <createTable tableName="member">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>

            <column name="password" type="VARCHAR(255)"/>
            <column name="email" type="VARCHAR(255)">
                <constraints unique="true"/>
            </column>
            <column name="status" type="VARCHAR(50)" />
            <column name="person_id" type="BIGINT">
                <constraints nullable="false"
                             foreignKeyName="fk_member_person_id"
                             referencedTableName="person"
                             referencedColumnNames="id"
                             primaryKey="true"
                             primaryKeyName="pk_member"
                />
            </column>
            <column name="role" type="VARCHAR(20)"/>
            <column name="date_of_membership" type="DATE"/>
            <column name="total_books_borrowed" type="INT"/>
            <column name="total_books_reserved" type="INT"/>
            <column name="charge" type="DECIMAL(10,2)"/>
            <column name="library_card_id" type="BIGINT"/>
        </createTable>

        <modifySql dbms="mysql">
            <append value="ENGINE=INNODB CHARSET=UTF8MB4 COLLATE utf8mb4_polish_ci"/>
        </modifySql>
    </changeSet>

</databaseChangeLog>