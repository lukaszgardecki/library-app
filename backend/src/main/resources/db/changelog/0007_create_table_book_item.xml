<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.2.xsd">

    <changeSet id="0007" author="lukas">
        <createTable tableName="book_item">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints nullable="false" primaryKey="true" unique="true"/>
            </column>
            <column name="barcode" type="VARCHAR(255)"/>
            <column name="is_reference_only" type="BOOLEAN"/>
            <column name="borrowed" type="DATE"/>
            <column name="due_date" type="DATE"/>
            <column name="price" type="DECIMAL(10,2)"/>
            <column name="status" type="VARCHAR(50)"/>
            <column name="date_of_purchase" type="DATE"/>
            <column name="book_id" type="BIGINT">
                <constraints nullable="false"
                             foreignKeyName="fk_book_item_book_id"
                             referencedTableName="book"
                             referencedColumnNames="id"
                             primaryKey="true"
                             primaryKeyName="pk_book_item"
                />
            </column>
            <column name="rack_id" type="BIGINT">
                <constraints nullable="false"
                             foreignKeyName="fk_book_item_rack_id"
                             referencedTableName="rack"
                             referencedColumnNames="id"
                             primaryKey="true"
                             primaryKeyName="pk_book_item"
                />
            </column>
        </createTable>
        <modifySql dbms="mysql">
            <append value="ENGINE=INNODB CHARSET=UTF8MB4 COLLATE utf8mb4_polish_ci"/>
        </modifySql>
    </changeSet>

</databaseChangeLog>